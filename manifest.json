{
  "manifest_version": 3,
  "name": "HKMU Syncalendar",
  "description": "Sync HKMU calendar events to Google Calendar on OLE",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "HKMU Syncalendar"
  },
  "permissions": ["storage", "activeTab", "scripting", "downloads"],
  "host_permissions": ["*://iole.hkmu.edu.hk/*", "*://schedule.hkmu.edu.hk/*"],
  "content_scripts": [
    {
      "matches": ["*://iole.hkmu.edu.hk/*", "*://schedule.hkmu.edu.hk/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected-script.js"],
      "matches": ["*://iole.hkmu.edu.hk/*", "*://schedule.hkmu.edu.hk/*"]
    }
  ]
}